<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/background"
        tools:context=".AboutProgramFragment">
    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_gravity="center"
            android:columnCount="1"
            android:alignmentMode="alignMargins"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">
    <TextView
            android:text="@string/about_program"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAboutProgram"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.1"/>
    <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Хотите скачать более новую версию?"
            android:textAllCaps="false"
            android:gravity="center"
            android:onClick="MainClick"
            tools:ignore="OnClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/setup_new_apk"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAboutProgram"
            app:layout_constraintEnd_toEndOf="@+id/tvAboutProgram"
            app:layout_constraintStart_toStartOf="@+id/tvAboutProgram"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>