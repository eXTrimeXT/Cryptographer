<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".ui.Algorithms.Caesar">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/Введите_текст"
            android:id="@+id/input_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="164dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:inputType="phone"
            android:hint="@string/step_caesar"
            app:layout_constraintTop_toBottomOf="@+id/input_text"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/BtnEncrypt"
            android:layout_marginStart="4dp"
            tools:ignore="TextFields"/>
    <TextView
            android:layout_width="251dp"
            android:layout_height="170dp"
            android:id="@+id/secret_text"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/password"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/BtnEncrypt"
            android:layout_marginStart="4dp"/>
    <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="В\nл\nе\nв\nо"
            android:layout_width="50dp"
            android:layout_height="370dp"
            android:id="@+id/BtnEncrypt"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="132dp"/>
    <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="В\nп\nр\nа\nв\nо"
            android:layout_width="50dp"
            android:layout_height="370dp"
            android:id="@+id/BtnDecrypt"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/BtnEncrypt"/>
    <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="@string/clear"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="MainClick"
            android:id="@+id/BtnClearText"
            android:layout_y="613dp"
            android:layout_x="155dp"
            app:layout_constraintStart_toStartOf="@+id/BtnCopyText"
            app:layout_constraintTop_toBottomOf="@+id/BtnCopyText"
            android:layout_marginStart="72dp"
            app:layout_constraintHorizontal_bias="0.0"
            tools:ignore="OnClick"
            app:layout_constraintEnd_toEndOf="@+id/BtnPasteText"
            android:layout_marginTop="24dp"/>
    <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="@string/copy"
            android:textAllCaps="false"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:onClick="MainClick"
            android:id="@+id/BtnCopyText"
            app:layout_constraintTop_toBottomOf="@+id/secret_text"
            android:layout_marginTop="20dp"
            tools:ignore="OnClick"
            app:layout_constraintStart_toEndOf="@+id/BtnEncrypt"
            android:layout_marginStart="4dp"/>
    <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="@string/paste"
            android:textAllCaps="false"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:onClick="MainClick"
            android:id="@+id/BtnPasteText"
            app:layout_constraintTop_toTopOf="@+id/BtnCopyText"
            app:layout_constraintEnd_toStartOf="@+id/BtnDecrypt"
            android:layout_marginEnd="5dp"
            tools:ignore="OnClick"/>
    <ImageButton
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:drawable/ic_menu_info_details"
            android:id="@+id/BtnInfo"
            app:layout_constraintStart_toStartOf="@+id/BtnDecrypt"
            app:layout_constraintEnd_toEndOf="@+id/BtnDecrypt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/BtnDecrypt"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.386"/>
</androidx.constraintlayout.widget.ConstraintLayout>